<p id="notice"><%= notice %></p>

<h1>Pops</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pops.each do |pop| %>
      <tr>
        <td><%= pop.name %></td>
        <td><%= pop.description %></td>
        <td><%= pop.price %></td>
        <td><%= pop.category %></td>
        <td><%= pop.user.email %></td>
        <td><%= link_to 'Show', pop, class:"btn btn-primary btn-lg" %></td>

        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Got one to Sell?', new_pop_path, class:"btn btn-primary btn-lg"%>
