
<%= simple_form_for(@pop) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, required:true %>
    <%= f.input :description, required:true %>
    <%= f.input :price, required:true %>
    <%= f.input :category, collection: ["Avatar: The Last Airbender", "Borderlands", "Deadpool", "Fairy Tail", "My Hero Academia", "Skyrim"], required:true %>
    <%=f.file_field :picture, required:true %>
  </div>

  <div class="form-actions">
  <p>
  </p>
    <%= f.button :submit, class:"btn btn-primary btn-lg"%> 
  </div>
<% end %>
