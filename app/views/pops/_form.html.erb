
<%= simple_form_for(@pop) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :category, collection: ["Avatar: The Last Airbender", "Borderlands", "Deadpool", "Fairy Tail", "My Hero Academia", "Skyrim"] %>
    <%=f.file_field :picture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
